<h1>Add a product.</h1>

  <%= form_for @product do |f| %>
    Name: <%= f.text_field :name %>
    Description: <%= f.text_field :description %>
    Password: <%= f.number_field :price %>
    <%= f.submit "Submit" %>
  <% end %>

<br>
<section>
  <% @products.each do |product| %>
    <span><p><%= product.name %> | <%= link_to "UPDATE", edit_product_path(product) %> </p></span><br>
  <% end %>
</section>
