<h3>Products</h3>

<div class="row">
  <div class="section">
  <% @products.each do |product| %>
    <div class="col s4">
      <h4><%= product.name %></h4>
      <p><%= product.description %></p>
      <p><%= number_to_currency product.price %></p>
      <%= form_for @order_item, remote: true do |f| %>
        <%= f.hidden_field :product_id, value: product.id %>
        <%= f.number_field :quantity, placeholder: "Oops, breaks if you don't add input!" %>
        <span class="waves-effect waves-light btn"><%= f.submit "Add to cart" %></span>
      <% end %>

      <!-- AJAX toggle product detail -->
      <p>
        <%= link_to "DETAIL", product_path(product), id:"#{product.id}", remote: true %>
      </p>
      <div id="product_detail_<%= product.id %>"></div>

    </div>
  <% end %>
</div>
</div>
